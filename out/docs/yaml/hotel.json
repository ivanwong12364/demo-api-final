{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "hotel": {
      "id": "/hotel",
      "title": "Hotel",
      "description": "An article in the blog",
      "type": "object",
      "properties": {
        "title": {
          "description": " name of the hotel",
          "type": "string"
        },
        "alltext": {
          "description": "Body text",
          "type": "string"
        },
        "summary": {
          "description": "Optional short text summary of hotel",
          "type": "string"
        },
        "imageurl": {
          "description": "URL for main image to show in hotel",
          "type": "uri"
        },
        "published": {
          "description": "Is the hotel published or not",
          "type": "boolean"
        },
        "agencyid": {
          "description": "User ID of the agency",
          "type": "integer",
          "minimum": 0
        },
        "description": {
          "description": "description of hotel in more details",
          "type": "string"  
        }        
      },
      "required": ["title", "alltext", "agencyid"]
    }
  }
}
